{
	"name": "guard-llm",
	"dockerComposeFile": ["../../compose-guard-dev.yml"],
	"service": "guard",
	"shutdownAction": "stopCompose",
	"workspaceFolder": "/workspace/Guard",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"
			],
			"settings": {
				"python.formatting.provider": "none", // Disable default python formater
				"editor.formatOnSave": true,
				"ruff.format.onSave": true // Ruff's own setting for format on save.
      		}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/python:1": {}
	},
 	"postStartCommand": "make"
}